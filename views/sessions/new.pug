extends /layouts/application.pug

block title
  - const title = `Sign in`;

block content
  h3.mb-3.text-center.mt-3 Please sign in
  div.row.justify-content-center
    div.col-4
      +formFor(f, { url: urlFor('session'), method: 'post' })
        +input(f, 'email', 'Email address')
        +input(f, 'password', 'Password', { as: 'password' })
        +button(f, 'Sign in', 'btn-block')
        