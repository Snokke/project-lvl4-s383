extends /layouts/application.pug

block content
  h3.mb-3.text-center.mt-3 Create new task
  div.row.justify-content-center
    div.col-3
      +formFor(f, { url: urlFor('tasks'), method: 'post' })
        +input(f, 'name', 'Task')
        +inputArea(f, 'description', 'Description', 5)
        +input(f, 'assignedTo', 'Assigned to')
        +input(f, 'tags', 'Tags')
        +button(f, 'Create task')
